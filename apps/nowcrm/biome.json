{
	"$schema": "https://biomejs.dev/schemas/2.2.7/schema.json",
	"extends": ["../../biome.json"],
	"files": {
		"includes": [
			"app/**",
			"components/**",
			"hooks/**",
			"i18n/**",
			"lib/**",
			"!components/editor",
			"!components/ui",
			"!components/event-calendar",
			"!tests",
			"!tests/**"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"nursery": {
				"useSortedClasses": {
					"level": "warn",
					"fix": "safe",
					"options": {
						"attributes": ["classList"],
						"functions": ["clsx", "cva", "cn"]
					}
				}
			},
			"a11y": {
				"noStaticElementInteractions": "off",
				"noSvgWithoutTitle": "off",
				"useAriaPropsSupportedByRole": "warn",
				"useKeyWithClickEvents": "off",
				"useSemanticElements": "off",
				"useFocusableInteractive": "off",
				"noLabelWithoutControl": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			},
			"recommended": true,
			"correctness": {
				"useExhaustiveDependencies": "off",
				"noUnusedImports": "off",
				"noNestedComponentDefinitions": "off",
				"useUniqueElementIds": "off"
			},
			"performance": {
				"noImgElement": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noConfusingVoidType": "off",
				"noArrayIndexKey": "off",
				"noUnknownAtRules": "warn"
			},
			"style": {
				"noUselessElse": "off",
				"noNonNullAssertion": "off",
				"noParameterAssign": "warn"
			},
			"complexity": {
				"noBannedTypes": "off",
				"noForEach": "off"
			}
		}
	}
}
