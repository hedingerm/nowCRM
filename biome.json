{
	"$schema": "https://biomejs.dev/schemas/2.2.7/schema.json",
	"root": true,
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"attributePosition": "auto",
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80,
		"lineEnding": "lf"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"style": {
				"useFilenamingConvention": {
					"level": "error",
					"options": {
						"filenameCases": ["kebab-case"],
						"strictCase": true,
						"requireAscii": true
					}
				}
			}
		}
	}
}
